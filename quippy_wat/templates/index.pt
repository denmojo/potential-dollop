<html>
<head>
	<title>Quippy WAT</title>
	<link rel="stylesheet" href="${request.static_url('quippy_wat:static/jquery-ui-1.12.0.css')}">
	<script
	  src="${request.static_url('quippy_wat:static/jquery-3.1.1.min.js')}">
	</script>
	<script
	  src="${request.static_url('quippy_wat:static/jquery-ui-1.12.0.min.js')}">
	</script>		
	<script>
	  $( function() {
	    $( "#datepicker" ).datepicker();
	  } );
	  </script>
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- style -->
  <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
	<style>
	body {padding: 0 40px;}
	</style>
</head>
<body>
	<h1>What did you say??</h1>
	<p>Store your out-of-context quips for later shaming.</p>
	<form method="POST" action="/quips/newquip">
		<p>Quip:<br/>
		<textarea cols="40" id="quipped_text" name="quipped_text" rows="5" required ></textarea></p>
		<p>Source:&nbsp;&nbsp;&nbsp;&nbsp; <input id="source" name="source" size="32" type="text" required /></p>
		<p>Date uttered: <input type="text" id="datepicker" name="source_date" size="29" required /></p>
		<p>Submitter: <input id="submitter" name="submitter" size="32" type="text" required /></p>
		<input type="submit" value="Post" />
	</form>
	<h2>Quips</h2>
	<!-- quippy_wat/templates/index.pt -->
	<div tal:condition="quips">
		<ul>
			<div tal:repeat="quip quips" tal:omit-tag="">
				<li tal:content="string:${quip.quipped_text} - ${quip.source}, ${quip.source_date.strftime('%b %d, %Y')}"/>
			</div>
		</ul>
	</div>
	<div tal:condition="not:quips">
		<em>Nobody posted any quips yet! So BORING!</em><br/><br/>
	</div>
	</html>
